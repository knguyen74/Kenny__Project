<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tic_tac_toe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kenny.kennyproject.TicTacToeActivity"

    >


    <ListView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
    </ListView>
    <TextView
            android:id="@+id/top_tv"
            android:layout_height="65dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/container"
            android:background="@android:color/transparent"
            android:text="Player 1's turn"
            android:textSize="50sp"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_tv"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >

            <GridLayout
                android:orientation="horizontal"
                android:id="@+id/game"
                android:columnCount="3"
                android:rowCount="3"
                android:layout_width="318dp"
                android:layout_height="318dp"
                android:layout_gravity="center"
                >
                <Button
                    android:id="@+id/tl_bt"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textSize="75sp"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"
                    android:padding="0dp"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/tm_bt"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textSize="75sp"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"
                    android:padding="0dp"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/tr_bt"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textSize="75sp"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"
                    android:padding="0dp"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/ml_bt"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textSize="75sp"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"
                    android:padding="0dp"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/mm_bt"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textSize="75sp"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"
                    android:padding="0dp"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/mr_bt"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textSize="75sp"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"
                    android:padding="0dp"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/bl_bt"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textSize="75sp"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"
                    android:padding="0dp"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/bm_bt"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textSize="75sp"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"
                    android:padding="0dp"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/br_bt"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textSize="75sp"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"
                    android:padding="0dp"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    />

            </GridLayout>
            <Button
                android:id="@+id/restart_bt"
                android:layout_below="@+id/game"
                android:layout_marginTop="5dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Restart"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/restart_bt"
                >
                <TextView
                    android:id="@+id/p1Score_tv"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_dark"
                    android:text="Player 1: 0"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"

                    />
                <TextView
                    android:id="@+id/tie_tv"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:text="Tie: 0"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/p2Score_tv"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_blue_dark"
                    android:text="Player 2: 0"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>


</RelativeLayout>
